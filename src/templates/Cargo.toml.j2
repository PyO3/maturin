[package]
name = "{{ name }}"
version = "0.1.0"
edition = "2021"

# See more keys and their definitions at https://doc.rust-lang.org/cargo/reference/manifest.html
{%- if bindings != "bin" %}
[lib]
name = "{{ crate_name }}"
crate-type = ["cdylib"]
{%- endif %}

[dependencies]
{% if bindings == "pyo3" -%}
pyo3 = "0.19.0"
{% elif bindings == "rust-cpython" -%}
cpython = "0.7.1"
{% elif bindings == "uniffi" -%}
uniffi = "0.24.1"

[build-dependencies]
uniffi = { version = "0.24.1", features = ["build"] }
{% endif -%}
